<h1 class="bg-red-500 py-1 px-3 mx-auto rounded">Reddit</h1>
<div class = "bg-gray-200 py-1 px-3 mx-auto rounded">
    <% @blog_posts.each do |blog_post| %>
        <div class="py-1 px-3 mx-auto border-solid border-b-2 border-gray-100">
            <h2 class="text-lg font-normal text-gray-500 no-underline bg-blue-400 py-1 px-3 mx-auto rounded"><%= link_to blog_post.title, blog_post, class: "no-underline" %></h2>
            <p><%= blog_post.body%></p>
        </div>
    <% end %>
</div>