<div class="relative flex flex-col space-y-4 mx-auto w-[42rem] border border-[#E5E5E5] shadow py-6 pb-32 px-9 text-[#14213D]">
  <div class="text-[#14213D] text-xl font-[700]">
    <h2>Forgot your password?</h2>
  </div>

  <hr class="py-1">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "color:#250D53" , class: "form-input rounded  pl-3 pr-6 py-3 w-full h-11" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "mb-6 mb-4 cursor-pointer bg-[#E5E5E5] rounded text-black hover:bg-opacity-90 py-1.5 px-3 mx-auto mt-10" %>
    </div>
  <% end %>

  <hr class="">

  <%= render "devise/shared/links" %>
</div>
